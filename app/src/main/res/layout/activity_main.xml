<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="net.spinda.runstone.MainActivity">

    <Switch
        android:id="@+id/stopwatchSwitch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/stopwatch_running"
        android:checked="false"
        android:gravity="start" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/intro_switch_on" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/intro_switch_off" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/intro_voice_prompts" />

</LinearLayout>